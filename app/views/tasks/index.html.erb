<h1 class="fs-1">All Tasks</h1>
<ul class="list-unstyled list-group">
  <% @tasks.each do |task| %>
    <li id="list-item" class="p-3 bg-light my-3 list-group-item rounded d-flex justify-content-between align-items-center">
      <div class="">
        <% if task.completed %>
          <input type="checkbox" class="p-3 m-2" checked>
        <% else %>
          <input type="checkbox" class="p-3 m-2">
        <% end %>
        <span class="font-weight-normal"><%= link_to task.title, task_path(task) %></span>
      </div>

      <%= link_to task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  do %>
        <i class="fa-solid fa-trash"  id="delete-ico"></i>
      <% end %>

    </li>
  <% end %>
</ul>
<%= link_to tasks_new_path, class:"btn btn-primary" do %>
<i class="fa-solid fa-plus"></i> Add a new task
<% end %>
